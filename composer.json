{
    "name": "sipan/sistema-panaderia",
    "description": "Sistema Integral para PanaderÃ­as",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-pdo": "*",
        "firebase/php-jwt": "^7.0",
        "mpdf/mpdf": "^8.2",
        "phpoffice/phpspreadsheet": "^5.4",
        "symfony/dotenv": "^7.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        },
        "files": ["app/SIPAN.php", "app/helpers.php"]
    },
    "require-dev": {
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^4.0",
        "symfony/var-dumper": "^7.4"
    },
    "scripts": {
        "format": ["phpcbf"],
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "php -S localhost:61001 -t public"
        ],
        "post-autoload-dump": [
            "php -r \"if (!file_exists('.env')) copy('.env.example', '.env');\""
        ],
        "lint": ["phpstan --memory-limit=1G"]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
